{% extends "::base.html.twig" %}

{% block title "Список тестов " %}

{% block content %}
    <h1>Зараз доступні наступні тести:</h1>
    <h1>{{ 'Our tests' | trans(locale='ru') }}</h1>
    
        {%  for test in tests %}
            <div class="thumbnail">
                <div class="caption">
                    <h3>{{ test.testName }}</h3>
                    <p> {{ test.testDescription|dotdotdot(200) }}</p>
                    <p><a href="{{path('_testview',{'id': test.testId}) }}" class="btn btn-primary" role="button">Пройти тест</a> </p>
                </div>
                tags:
                {% for tag in test.tags %}
                   <a href='{{ path('_tagsview',{'id': tag.id}) }}'>{{ tag.name }}</a>,
                {% endfor%}
                <a href="{{ path('_guestbook_id',{'id': test.id}) }}">Залишити відгук</a>
            </div>
   {%  endfor%}
   <a href='{{path('chabanenk0_test_assignment_newtest')}}'>Створити новий тест</a>
{% endblock %}


{% set code = code(_self) %}
